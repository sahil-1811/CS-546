<main>
    <div class="container">
        <h1>Signup</h1>
        <form method="POST" action='/signup' id="login-form">
        <div class="form">
            <label for='username'>
                Username:
                <input id="username" type="text" name='username' class="form-user" placeholder="Username">
            </label>
        </div>
        <div class="form">
            <label for="password">
                Password:
                <input id="password" type="password" name="password" class="'form-user" placeholder="Password">
            </label>
        </div>
        <button type="submit" class="btn">Sign-up</button>
        </form>
        <br>
        {{#if hasErrors}}
        <p class="Error">{{error}}</p>
        {{/if}}
        <br>
        <a href="/">Already have an account? Click here to log-in</a>
    </div>
</main>
